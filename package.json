{
  "name": "extract-text-html",
  "type":"module",
  "version": "0.2.0",
  "description": "Extracts text from HTML. Excludes content from metadata tags by default.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git://github.com/smartprocure/extract-text-html.git",
  "scripts": {
    "prepare": "npm run lint && npm run build",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --declaration",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**"
  },
  "keywords": [
    "extract",
    "text",
    "html",
    "strip",
    "tag",
    "tags",
    "metadata",
    "replace",
    "replacement"
  ],
  "author": "GovSpend",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "eslint": "^8.48.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/debug": "^4.1.12",
    "debug": "^4.3.4",
    "htmlparser2": "^9.0.0"
  }
}
